{
  "license": "GPL-3.0",
  "config": {
    "secure-http": true
  },
  "require": {
    "php": ">=7.0",
    "gte451f/phalcon-json-api-package": "dev-dev",
    "stripe/stripe-php": "^3.0",
    "inacho/php-credit-card-validator": "^1.0",
    "ext-curl": "*",
    "authorizenet/authorizenet": "^1.9",
    "jms/serializer": "serializer-master-dev as 1.0"
  },
  "require-dev": {
    "codeception/codeception": "*",
    "flow/jsonpath": "dev-master",
    "phalcon/devtools": "^3.0"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/goetas/serializer.git"
    }
  ],
  "scripts": {
    "post-install-cmd": "composer dumpautoload -o",
    "post-update-cmd": "composer dumpautoload -o",
    "clear": "rm -rf /tmp/*",
    "test": "codecept run",
    "test-debug": "codecept run --debug",
    "test-api": "codecept run acceptance",
    "test-api-debug": "codecept run acceptance --debug"
  }
}
